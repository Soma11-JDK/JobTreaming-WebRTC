.videoPlayer#jsVideoPlayer
    video(playsinline autoplay).screen-video
    .videoPlayer__live
        i.fas.fa-wifi
        span LIVE
        i.far.fa-user
        span 10

    .videoPlayer__controls
        .videoPlayer__column
            #jsPlayButton.videoBtn
                i.fas.fa-pause
            #jsPlayTime.videoBtn
                |00:00:00
            #jsVolumeButton.videoBtn
                i.fas.fa-volume-up
            input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1" value="0.5")

        .videoPlayer__column
            #jsFullScreen.videoBtn
                i.fas.fa-expand